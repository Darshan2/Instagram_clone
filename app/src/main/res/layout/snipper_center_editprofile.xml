<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:padding="20sp">
            
          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_width="120sp"
              android:layout_height="120sp"
              app:civ_border_width="2sp"
              app:civ_border_color="@color/black"
              android:layout_marginTop="20sp"
              android:layout_centerHorizontal="true"
              android:src="@drawable/ic_profile"
              android:id="@+id/profile_photo"/>

            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile photo"
                android:layout_below="@+id/profile_photo"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/changeProfilePhoto"/>

            <!-- User name Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@id/changeProfilePhoto"
                android:layout_marginTop="80sp"
                android:id="@+id/relLayout2"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_user_name"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView1"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/user_name"
                    android:hint="User name"
                    android:inputType="textNoSuggestions"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Display name Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@id/relLayout2"
                android:layout_marginTop="12sp"
                android:id="@id/relLayout3"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_display_name"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView2"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/display_name"
                    android:hint="Display name"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


            <!-- Website Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12sp"
                android:layout_below="@id/relLayout3"
                android:id="@+id/relLayout4"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_website"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView3"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/website"
                    android:hint="Website"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- Description Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12sp"
                android:layout_below="@id/relLayout4"
                android:id="@+id/relLayout5"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_description"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView4"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView4"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/description"
                    android:hint="Description"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE INFORMATION"
                android:layout_below="@id/relLayout5"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginTop="40sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/grey_border_bottom"
                android:padding="5sp"
                android:id="@+id/textPrivateInfo"/>

            <!-- Email Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12sp"
                android:layout_below="@id/textPrivateInfo"
                android:id="@+id/relLayout6"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView5"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Phone number Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="12sp"
                android:layout_below="@id/relLayout6"
                android:id="@+id/relLayout7"
                android:background="@drawable/grey_border_bottom">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_phone"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgView6"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgView6"
                    android:layout_marginStart="10sp"
                    android:background="@color/white"
                    android:id="@+id/phone_number"
                    android:hint="Phone Number"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>




        </RelativeLayout>

    </ScrollView>
</merge>